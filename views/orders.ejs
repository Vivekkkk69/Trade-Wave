<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Orders</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="orders.css">
</head>
<body>
    <header>
    <div class="navbar">
        <div class="containerlogo">
        <div class="logo"></div>
        <div class="seller">
            Seller central
        </div>
        </div>


        <div class="navcontentcontainer">
            
            <div class="sellerdashboard">
                Seller Dashboard
            </div>
            <div class="home">
                <i class="fa-solid fa-house"></i>
            </div>
            <div class="notification">
                <i class="fa-solid fa-bell"></i>
            </div>
            <div class="account">
                <i class="fa-solid fa-user"></i>
            </div>
            <div class="needhelp">
                Need Help?
            </div>
            </div>
    </div>
     <div class="secondbar">
        <div class="dashboard secondbarcontent">
            Dashboard
        </div>
        <div class="products secondbarcontent">
            Products
        </div>
        <div class="orders secondbarcontent">
            Orders
        </div>
        <div class="commission secondbarcontent">
            Commission
        </div>
        <div class="payment secondbarcontent">
            Payment
        </div>
        <div class="marketing secondbarcontent">
            Marketing
        </div>
     </div>

    </header>
    <div class="main">
        <div class="mainheading">
            Orders

        </div>
        
        <div class="filtershipping">
        <div class="shippingdetails">
            <div class="paymentpending shippingcontent">
                Payment Pending(0)
            </div>
            <div class="unshipped shippingcontent">
                 Unshipped(0)
            </div>
            <div class="shipped shippingcontent">
                Shipped
           </div>
           <div class="canceled shippingcontent">
                Canceled
           </div>
        </div>

        <div class="filters">
            <div class="filterheading filtercontent">
                Filters->
            </div>
            <div class="filterbydays filtercontent">
                <select name="" id="filterbydays">
                    <option value="">Last 1 week</option>
                    <option value="">Last 10 Days</option>
                    <option value="">Last 30 Days</option>
                    <option value="">Last 6 Months</option>
                    <option value="">Last 365 Days</option>
                </select>
            </div>
            <div class="filterbyplace filtercontent">
                <input type="text" id="filterbyplace" placeholder="  Filter by place">
            </div>
            <div class="refresh filtercontent">
                <i class="fa-solid fa-rotate"></i>
            </div>
        </div>

      </div>

      <div class="ordercardscontainer">
     
<% orders.forEach(function(order) { %>
  <div class="oredercards">
      <div class="imageproduct">
          <img src="<%= order.url %>" alt="<%= order.Model %>" height="100%" width="100%">
      </div>
      <div class="itemname">
          <p style="font-size: 20px;"><%= order.Model %></p>
          <br>
          <p>UserId: <%= order.userId %></p>
          <p>Sellerid: <%= order.sellerId %></p>
      </div>

      <div class="pricing">
          <p style="font-size: 20px;">Unit Price: &#8377;<%= order.Price %></p>
          <br>
          <p>Quantity: <%= order.quantity %></p>
      </div>

      <div class="shippingtime">
          <p style="font-size: 15px;">Shipping time: <%= order.shippingTime %></p>
          <br>
          <p>Shipping date: <%= order.shippingDate %></p>
      </div>

      <!-- <div class="cancelbutton">
          <button id="cancelbutton" data-orderid="<%= order._id %>">Cancel Order</button>
      </div> -->
  </div>
<% }); %>
    </div>

    <script src="seller.js"></script>
</body>
</html>