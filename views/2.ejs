<body>
  <form action="/2" method="post">
<div class="container">
  <h2>Car Selling Form</h2>
  <div class="user-count">
    <h3>Number of Users:</h3>
    <div class="user-buttons">
      <button class="user-btn">1</button>
      <button class="user-btn">2</button>
      <button class="user-btn">3</button>
      <button class="user-btn">4</button>
      <button class="user-btn">4+</button>
    </div>
  </div>
  <div class="form-group">
    <label for="brand">Select Brand:</label>
    <select id="brand" name="brand">
      <option value="">Select Brand</option>
      <option value="yamaha">Yamaha</option>
      <option value="tata">Tata</option>
      <option value="jaguar">Jaguar</option>
      <option value="rr">RR</option>
      Add more options as needed
    </select>
    <!-- <input type="text" id="brand" name="brand" required> -->
  </div>
  <div class="form-group">
    <label for="model">Model:</label>
    <input type="text" id="model" name="model" required>
  </div>
  <div class="form-group">
    <label for="itemType">Item Type:</label>
    <input type="text" id="itemType" name="itemType" required>
  </div>

  <div class="form-group">
    <label for="price">Price:</label>
    <input type="number" id="price" name="price" required>
  </div>
  <div class="form-group">
    <label for="year">Year of Buy:</label>
    <input type="text" id="year" name="year" required>
  </div>
  <div class="form-group">
    <label for="type">Type:</label>
    <input type="text" id="type" name="type" required>
  </div>
  <div class="form-group">
    <label for="description">Description:</label>
    <textarea id="description" name="description" rows="4" required></textarea>
  </div>
 
  <div class="form-group">
    <label for="photos">Upload Photos:</label>
    <div class="photo-preview" id="photoPreview">
      <div class="photo-box" id="photoBox1">
        <label for="photo1" class="upload-icon">+</label>
        <input type="text" id="photo1" name="photos">
      </div>
    </div>
  </div>
  <button type="submit" class="btn-submit">Submit</button>
</div>
</form>
</body>
<script>
  const userButtons = document.querySelectorAll('.user-btn');
  const fuelTypeButtons = document.querySelectorAll('.fuel-type-btn');
  const fuelTypeInput = document.getElementById('fuelType');

  userButtons.forEach(button => {
    button.addEventListener('click', () => {
      userButtons.forEach(btn => {
        btn.classList.remove('active');
      });
      button.classList.add('active');
    });
  });

  fuelTypeButtons.forEach(button => {
    button.addEventListener('click', () => {
      fuelTypeButtons.forEach(btn => {
        btn.classList.remove('active');
      });
      button.classList.add('active');
      fuelTypeInput.value = button.textContent.trim();
    });
  });
</script>

